<Window x:Class="OficinaEletrodomesticos.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Username:" Margin="5"/>
        <TextBox x:Name="txtUsername" Grid.Row="0" Margin="100,5,5,5"/>
        <TextBlock Text="Password:" Grid.Row="1" Margin="5"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Margin="100,5,5,5"/>
        <Button x:Name="btnLogin" Content="Login" Grid.Row="2" Margin="5" Click="btnLogin_Click"/>
        <Button x:Name="btnCriar" Content="Criar" Grid.Row="3" Margin="5" Click="btnCriar_Click"/>
        <TextBlock x:Name="lblError" Grid.Row="4" Margin="5" Foreground="Red"/>
    </Grid>
</Window>
