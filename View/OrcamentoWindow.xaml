<Window x:Class="OficinaEletrodomesticos.View.OrcamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orcamento" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Aparelho" Margin="10"/>
            <TextBox Name="txtAparelho" Margin="10"/>

            <TextBlock Text="Cliente" Margin="10"/>
            <TextBox Name="txtCliente" Margin="10"/>

            <TextBlock Text="Descrição do Defeito" Margin="10"/>
            <TextBox Name="txtDescricao" Margin="10"/>

            <TextBlock Text="Valor Total" Margin="10"/>
            <TextBox Name="txtValorTotal" Margin="10"/>

            <TextBlock Text="Prazo de Entrega (dias)" Margin="10"/>
            <TextBox Name="txtPrazoEntrega" Margin="10"/>

            <Button Name="btnCriarOrcamento" Content="Criar Orcamento" Click="CriarOrcamento_Click" Margin="10"/>
            <Button Name="btnFechar" Content="Fechar" Click="Fechar_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
