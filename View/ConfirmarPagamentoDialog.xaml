<Window x:Class="OficinaEletrodomesticos.View.ConfirmarPagamentoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmar Pagamento" Height="200" Width="400">
    <Grid>
        <Label Content="Valor Pagamento:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="txtValorPagamento" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="360"/>
        <Button Content="Confirmar" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="80" Click="Confirmar_Click"/>
        <Button Content="Cancelar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="80" Click="Cancelar_Click"/>
    </Grid>
</Window>
