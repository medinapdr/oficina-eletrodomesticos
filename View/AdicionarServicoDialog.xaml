<Window x:Class="OficinaEletrodomesticos.View.AdicionarServicoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adicionar Servico" Height="300" Width="400">
    <Grid>
        <Label Content="Orcamento ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="txtOrcamentoId" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="360"/>
        <Label Content="Descricao:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <TextBox x:Name="txtDescricao" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0" Width="360"/>
        <Button Content="Adicionar" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="80" Click="Adicionar_Click"/>
        <Button Content="Cancelar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="80" Click="Cancelar_Click"/>
    </Grid>
</Window>
