<Window x:Class="OficinaEletrodomesticos.View.PedidoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PedidoView" Height="550" Width="1035" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*" />
            <ColumnDefinition Width="42*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dgPedidos" Grid.Row="0" Grid.Column="0" Margin="47,10,1,10" AutoGenerateColumns="False" ItemsSource="{Binding Pedidos}" SelectedItem="{Binding PedidoSelecionado}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Peca" Binding="{Binding Peca.Nome}" />
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" />
                <DataGridTextColumn Header="Valor Unitario" Binding="{Binding ValorUnitario, StringFormat={}{0:C}}" />
                <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat={}{0:C}}" />
                <DataGridTextColumn Header="Fornecedor" Binding="{Binding Fornecedor}" />
                <DataGridTextColumn Header="DataCriacao" Binding="{Binding DataCriacao, StringFormat=\{0:dd/MM/yyyy\}}" />
                <DataGridTextColumn Header="DataRecebimento" Binding="{Binding DataRecebimento, StringFormat=\{0:dd/MM/yyyy\}}" />
            </DataGrid.Columns>
        </DataGrid>

<StackPanel Grid.Row="0" Grid.Column="1" Margin="10,10,10,10">
    <TextBlock Text="Incluir Novo Pedido" FontWeight="Bold" Margin="0,10,0,20" Width="112"/>

    <Grid Margin="0,0,0,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Peca:" Grid.Row="0" Grid.Column="0" Margin="1,9,9,7"/>
                <ComboBox x:Name="cmbPeca" Grid.Row="0" Grid.Column="1" DisplayMemberPath="Nome" SelectedValuePath="Id" Width="200" Height="23.4" Margin="36,7,37,3"/>

        <TextBlock Text="Valor Unitario:" Grid.Row="1" Grid.Column="0" Margin="0,5,10,0"/>
        <TextBox x:Name="txtValorUnitario" Grid.Row="1" Grid.Column="1" Width="200" Margin="36,4,37,1" Height="23.4"/>

        <TextBlock Text="Quantidade:" Grid.Row="2" Grid.Column="0" Margin="0,4,10,1"/>
        <TextBox x:Name="txtQuantidade" Grid.Row="2" Grid.Column="1" Width="200" Margin="36,4,37,1" Height="23.4"/>

        <TextBlock Text="Valor Total:" Grid.Row="3" Grid.Column="0" Margin="0,4,10,1"/>
        <TextBox x:Name="txtValorTotal" Grid.Row="3" Grid.Column="1" Width="200" Margin="36,4,37,1" IsReadOnly="True" Height="23.4"/>

        <TextBlock Text="Fornecedor:" Grid.Row="4" Grid.Column="0" Margin="0,4,10,1"/>
        <TextBox x:Name="txtFornecedor" Grid.Row="4" Grid.Column="1" Width="200" Margin="36,5,37,0" Height="23.4"/>

        <Button Content="Adicionar Pedido" Click="AdicionarPedido_Click" Grid.Row="5" Grid.Column="1" Width="200" Margin="36,10,37,10"/>
    </Grid>
</StackPanel>


        <Button Content="Confirmar Recebimento" Click="ConfirmarRecebimento_Click" Grid.Row="1" Grid.Column="0" Margin="0,0,244,15" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

    </Grid>
</Window>
