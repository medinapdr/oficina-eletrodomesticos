<Window x:Class="OficinaEletrodomesticos.View.PedidoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PedidoView" Height="550" Width="1035">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*" />
            <ColumnDefinition Width="42*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dgPedidos" Grid.Row="0" Grid.Column="0" Margin="41,10,1,10" AutoGenerateColumns="False" ItemsSource="{Binding Pedidos}" SelectedItem="{Binding PedidoSelecionado}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Peca" Binding="{Binding Peca.Nome}" />
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" />
                <DataGridTextColumn Header="Valor Unitario" Binding="{Binding ValorUnitario, StringFormat={}{0:C}}" />
                <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat={}{0:C}}" />
                <DataGridTextColumn Header="Fornecedor" Binding="{Binding Fornecedor}" />
                <DataGridTextColumn Header="DataCriacao" Binding="{Binding DataCriacao, StringFormat=\{0:dd/MM/yyyy\}}" />
                <DataGridTextColumn Header="DataRecebimento" Binding="{Binding DataRecebimento, StringFormat=\{0:dd/MM/yyyy\}}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,10,10,10">
            <TextBlock Text="Incluir Novo Pedido" FontWeight="Bold" Margin="0,10,0,10"/>
            <TextBlock Text="Peca:"/>
            <ComboBox x:Name="cmbPeca" DisplayMemberPath="Nome" SelectedValuePath="Id" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Valor Unitario:"/>
            <TextBox x:Name="txtValorUnitario" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Quantidade:"/>
            <TextBox x:Name="txtQuantidade" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Valor Total:"/>
            <TextBox x:Name="txtValorTotal" Width="200" Margin="0,0,0,10" IsReadOnly="True"/>
            <TextBlock Text="Fornecedor:"/>
            <TextBox x:Name="txtFornecedor" Width="200" Margin="0,0,0,10"/>
            <Button Content="Adicionar Pedido" Click="AdicionarPedido_Click" Width="200" Margin="0,10,0,10"/>
        </StackPanel>

        <Button Content="Confirmar Recebimento" Click="ConfirmarRecebimento_Click" Grid.Row="1" Grid.Column="0" Margin="0,0,244,15" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
